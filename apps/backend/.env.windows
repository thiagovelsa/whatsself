# =============================================================================
# WhatsSelf Backend - Windows Environment Configuration
# =============================================================================

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
LOG_PRETTY=true

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="file:./prisma/dev.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/whatsself?schema=public"

# =============================================================================
# Security & Authentication
# =============================================================================
JWT_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION_USE_RANDOM_64_CHARS
JWT_EXPIRES_IN=7d
DEFAULT_ADMIN_EMAIL=admin@whatsself.local
DEFAULT_ADMIN_PASSWORD=ChangeMe!123
CONFIG_CRYPTO_KEY=GENERATE_A_BASE64_32_BYTE_KEY
API_CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# WhatsApp Configuration
# =============================================================================
SKIP_WHATSAPP=false
WHATS_SESSION_PATH=../../data/whatsapp_session
PUPPETEER_HEADLESS=true
# PUPPETEER_EXECUTABLE_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe

# =============================================================================
# Rate Limiting & Business Rules
# =============================================================================
RATE_MAX_PER_MIN=12
RATE_PER_CONTACT_PER_5MIN=2
BUSINESS_HOURS=09:00-18:00
TIMEZONE=America/Sao_Paulo
HUMANIZER_MIN_DELAY_MS=3000
HUMANIZER_MAX_DELAY_MS=7000
HUMANIZER_MIN_TYPING_MS=1500
HUMANIZER_MAX_TYPING_MS=3500

# =============================================================================
# Circuit Breaker Configuration
# =============================================================================
CB_WINDOW_MODE=5m_or_50
CB_MIN_ATTEMPTS=20
CB_FAIL_RATE_OPEN=0.25
CB_PROBE_INTERVAL_SEC=45
CB_PROBE_SUCCESS_CLOSE=0.9
CB_PROBE_SAMPLES=10
CB_COOLDOWN_INITIAL_SEC=300
CB_COOLDOWN_MAX_SEC=1800

# =============================================================================
# WebSocket Configuration
# =============================================================================
WS_PORT=3001
WS_PATH=/socket.io

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=false

# =============================================================================
# Windows Specific Settings
# =============================================================================
WINDOWS_TEMP_DIR=%TEMP%\whatsself
WINDOWS_LONG_PATH_SUPPORT=true
